<Window x:Class="NargesLogs.Home_Page"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NargesLogs"
        mc:Ignorable="d"
        Title="Home_Page" Height="700" Width="900" Background="#FF45A3CE" ResizeMode="CanMinimize" Closed="Window_Closed">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="389*"/>
            <RowDefinition Height="55*"/>
            <RowDefinition Height="225*"/>
        </Grid.RowDefinitions>
        <Image Source="Logo.png" Width="228" Height="213" Margin="322,156,322,0"/>
        <Button x:Name="btnAddClient" Click="btnAddClient_Click" Grid.Row="2" Content="Add a Patient" FontSize="14" Background="#FF0789C4" BorderBrush="#FF060E12" Foreground="#FF060E12" Cursor="Hand" Width="117" Height="27" Margin="378.5,0,378.5,179"/>
        <Button x:Name="btnPatientList" Click="btnPatientList_Click" Grid.Row="1" Margin="378.5,8,378.5,0" Content="View Patients" FontSize="14" Background="#FF0789C4" BorderBrush="#FF060E12" Foreground="#FF060E12" Cursor="Hand" Width="117" Height="27"/>
        <Button x:Name="btnLogout" Click="btnLogout_Click" Grid.Row="2" Content="Logout" FontSize="14" Background="#FF0789C4" BorderBrush="#FF060E12" Foreground="#FF060E12" Cursor="Hand" Width="117" Height="27" Margin="378,46,378,133"/>
    </Grid>
</Window>
